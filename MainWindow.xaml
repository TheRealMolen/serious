<Window x:Class="serious.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:serious"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, Mode=OneWay}" Height="500" Width="480" Background="#FF212121">

    <Window.Resources>
        <SolidColorBrush x:Key="TerminalBg" Color="#FF212121"/>
        <SolidColorBrush x:Key="TerminalFg" Color="#FF0E802F"/>
        <Style x:Key="TerminalFont" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Cascadia Mono, Lucida Console" />
        </Style>
    </Window.Resources>
    
    <Grid Margin="3,3,3,3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Name="TtyScroll" Grid.Row="0">
            <TextBlock Text="{Binding TTY, Mode=OneWay}" FontFamily="Cascadia Mono, Lucida Console" FontSize="11" Foreground="{StaticResource TerminalFg}" RenderTransformOrigin="0.5,0.5" SizeChanged="TextBlock_SizeChanged" />
        </ScrollViewer>
    </Grid>
</Window>
